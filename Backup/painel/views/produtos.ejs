<% layout('layout') -%>
<div class="card">
  <h3>ðŸ“¦ Produtos</h3>

  <!-- FormulÃ¡rio de AdiÃ§Ã£o -->
  <form method="post" action="/produtos/add" class="row">
    <div><label>Nome</label><input type="text" name="name" required></div>
    <div><label>PreÃ§o</label><input type="number" name="price" step="0.01" min="0" required></div>
    <div><label>Imagem (URL)</label><input type="url" name="image" placeholder="https://..."></div>

    <!-- Categoria (select dinÃ¢mico) -->
    <div>
      <label>Categoria</label>
      <select name="category" required>
        <% if (categorias && categorias.length) { %>
          <% categorias.forEach(c => { %>
            <option value="<%= c.slug %>"><%= c.name %></option>
          <% }) %>
        <% } else { %>
          <option value="">Nenhuma categoria cadastrada</option>
        <% } %>
      </select>
    </div>

    <div>
      <label>Ativo</label>
      <select name="active">
        <option value="true" selected>Sim</option>
        <option value="false">NÃ£o</option>
      </select>
    </div>

    <div style="align-self:end">
      <button class="btn primary" type="submit">Adicionar</button>
    </div>
  </form>

  <!-- Tabela de Produtos -->
  <table class="table">
    <thead>
      <tr>
        <th>#</th><th>Nome</th><th>PreÃ§o</th><th>Categoria</th><th>Ativo</th><th>Imagem</th><th>AÃ§Ãµes</th>
      </tr>
    </thead>
    <tbody>
      <% (items || []).forEach((p, idx) => { %>
        <tr>
          <td><span class="badge"><%= idx + 1 %></span></td>
          <td><input form="f<%= p.id %>" type="text" name="name" value="<%= p.name %>"></td>
          <td><input form="f<%= p.id %>" type="number" step="0.01" name="price" value="<%= p.price %>"></td>

          <!-- Categoria dinÃ¢mica -->
          <td>
            <select form="f<%= p.id %>" name="category">
              <% if (categorias && categorias.length) { %>
                <% categorias.forEach(c => { %>
                  <option value="<%= c.slug %>" <%= (p.category === c.slug) ? 'selected' : '' %>><%= c.name %></option>
                <% }) %>
              <% } else { %>
                <option value="">Nenhuma</option>
              <% } %>
            </select>
          </td>

          <td>
            <select form="f<%= p.id %>" name="active">
              <option value="true" <%= p.active ? 'selected' : '' %>>Sim</option>
              <option value="false" <%= !p.active ? 'selected' : '' %>>NÃ£o</option>
            </select>
          </td>

          <td><input form="f<%= p.id %>" type="url" name="image" value="<%= p.image %>"></td>

          <td>
            <form id="f<%= p.id %>" method="post" action="/produtos/update">
              <input type="hidden" name="id" value="<%= p.id %>">
              <button class="btn primary" type="submit">Salvar</button>
            </form>

            <form method="post" action="/produtos/del" style="display:inline">
              <input type="hidden" name="id" value="<%= p.id %>">
              <button class="btn" type="submit">Excluir</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
