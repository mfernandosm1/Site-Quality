<% layout('layout') -%>
<div class="grid">
  <div class="card">
    <h2>Produtos</h2>
    <form method="post" action="/produtos/add" class="row">
      <input name="name" placeholder="Nome" />
      <input name="price" placeholder="Preço" />
      <input name="image" placeholder="Imagem" />
      <input name="link" placeholder="Link (opcional)" />
      <button class="btn">Adicionar</button>
    </form>
  </div>
  <div class="card">
    <h3>Importar do index.html</h3>
    <form method="post" action="/produtos/import">
      <button class="btn">Importar</button>
    </form>
  </div>
  <div class="card">
    <table class="table">
      <thead><tr><th>Imagem</th><th>Nome</th><th>Preço</th><th>Link</th><th></th></tr></thead>
      <tbody>
        <% (items||[]).forEach(it=>{ %>
          <tr>
            <td><% if (it.image) { %><img src="/site/<%= it.image %>" style="height:40px"><% } %></td>
            <td><%= it.name %></td>
            <td><%= it.price %></td>
            <td><a href="/site/<%= it.link %>" target="_blank"><%= it.link %></a></td>
            <td>
              <form method="post" action="/produtos/delete"><input type="hidden" name="id" value="<%= it.id %>"><button class="btn danger">Excluir</button></form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
