<% layout('layout') -%>
<div class="grid">
  <% if (query && query.backup) { %>
    <div class="card"><strong>Backup criado:</strong> <code>painel/backups/snapshots/<%= query.backup %></code></div>
  <% } %>

  <div class="card">
    <h2>1) Backup completo do site</h2>
    <form method="post" action="/publicar/backup"><button class="btn">Criar backup agora</button></form>
  </div>

  <div class="card">
    <h2>2) Exportar ZIP p/ GitHub Pages</h2>
    <form method="post" action="/publicar/export-zip"><button class="btn">Gerar e baixar ZIP</button></form>
    <p class="muted">Caminhos relativos, runtimes e <code>.nojekyll</code>.</p>
  </div>

  <div class="card">
    <h2>3) Exportar + Commit + Push</h2>
    <form method="post" action="/publicar/publish-git"><button class="btn">Publicar</button></form>
  </div>
</div>
