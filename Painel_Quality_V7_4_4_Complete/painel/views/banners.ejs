<% layout('layout') -%>
<div class="grid">
  <div class="card">
    <h2>Banners</h2>
    <form method="post" action="/banners/add" class="row">
      <input name="image" placeholder="URL da imagem" />
      <input name="link" placeholder="Link (opcional)" />
      <input name="title" placeholder="Título (opcional)" />
      <input name="subtitle" placeholder="Subtítulo (opcional)" />
      <button class="btn">Adicionar</button>
    </form>
  </div>
  <div class="card">
    <h3>Importar (robusto)</h3>
    <form method="post" action="/banners/import2">
      <button class="btn">Importar do index.html</button>
    </form>
  </div>
  <div class="card">
    <table class="table">
      <thead><tr><th>#</th><th>Imagem</th><th>Título</th><th>Link</th><th></th></tr></thead>
      <tbody>
        <% (items||[]).forEach((it, idx)=>{ %>
          <tr>
            <td><%= idx %></td>
            <td><% if (it.image) { %><img src="/site/<%= it.image %>" style="height:40px"><% } %></td>
            <td><%= it.title %></td>
            <td><a href="/site/<%= it.link %>" target="_blank"><%= it.link %></a></td>
            <td>
              <form method="post" action="/banners/delete"><input type="hidden" name="idx" value="<%= idx %>"><button class="btn danger">Excluir</button></form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
