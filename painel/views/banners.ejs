<% layout('layout') -%>
<div class="card">
  <h3>üñºÔ∏è Banners</h3>
  <form method="post" action="/banners/add" class="row">
    <div><label>Imagem (URL)</label><input type="url" name="image"></div>
    <div><label>Link</label><input type="url" name="link"></div>
    <div><label>T√≠tulo</label><input type="text" name="title"></div>
    <div><label>Subt√≠tulo</label><input type="text" name="subtitle"></div>
    <div><label>Ordem</label><input type="number" name="order" placeholder="1"></div>
    <div style="align-self:end"><button class="btn" type="submit">Adicionar</button></div>
  </form>
  <table class="table">
    <thead><tr><th>#</th><th>Imagem</th><th>T√≠tulo</th><th>Link</th><th>Ordem</th><th>A√ß√µes</th></tr></thead>
    <tbody>
      <% (items||[]).forEach((it,idx)=>{ %>
        <tr>
          <td><span class="badge"><%= idx+1 %></span></td>
          <td><input type="url" form="f<%=idx%>" name="image" value="<%= it.image %>"></td>
          <td><input type="text" form="f<%=idx%>" name="title" value="<%= it.title %>"><br/><small><input type="text" form="f<%=idx%>" name="subtitle" value="<%= it.subtitle %>"></small></td>
          <td><input type="url" form="f<%=idx%>" name="link" value="<%= it.link %>"></td>
          <td><input type="number" form="f<%=idx%>" name="order" value="<%= it.order || (idx+1) %>"></td>
          <td>
            <form id="f<%=idx%>" method="post" action="/banners/update"><input type="hidden" name="index" value="<%= idx %>"><button class="btn primary">Salvar</button></form>
            <form method="post" action="/banners/del" style="display:inline"><input type="hidden" name="index" value="<%= idx %>"><button class="btn">Excluir</button></form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<div class="card">
  <h3>Importar</h3>
  <p class="notice">Tenta ler imagens do carrossel no <code>index.html</code>.</p>
  <form method="post" action="/banners/import"><button class="btn">Importar do index.html</button></form>
</div>
