<% layout('layout') -%>

<div class="editor-card">
  <h2>📝 Editando: <%= file %></h2>
  <form action="/paginas/save" method="POST">
    <input type="hidden" name="file" value="<%= file %>">

    <textarea name="content" id="editor" style="width:100%;height:600px;"><%- content %></textarea>

    <div class="actions">
      <button type="submit" class="btn-salvar">💾 Salvar Alterações</button>
      <a href="/paginas" class="btn-voltar">⬅ Voltar</a>
    </div>
  </form>
</div>

<script>
  CKEDITOR.replace('editor', {
    allowedContent: true,
    extraAllowedContent: '*[*]{*}(*)',
    height: 600,
    removeButtons: '',
    language: 'pt-br'
  });
</script>
