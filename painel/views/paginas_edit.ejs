<% layout('layout') -%>
<div class="card">
  <h3>🏠 Editar: <%= file %></h3>
  <p class="muted mb-2">Somente o conteúdo do &lt;main&gt; é editado. Scripts, header e footer são preservados.</p>

  <textarea id="editorVisual"><%- content %></textarea>
  <div style="margin-top:10px;display:flex;gap:8px;">
    <button id="saveVisual" class="btn primary">💾 Salvar (Visual)</button>
    <a href="/paginas/edit?file=<%= file %>" class="btn ghost">🔄 Recarregar do arquivo</a>
  </div>

  <hr style="margin:20px 0;">

  <form method="post" action="/paginas/save">
    <input type="hidden" name="file" value="<%= file %>">
    <label>Modo Código (HTML do &lt;main&gt;)</label>
    <textarea name="content" rows="14" class="w-full border p-2 font-mono"><%- content %></textarea>
    <button class="btn mt-2">Salvar (Código)</button>
  </form>
</div>

<script src="https://cdn.ckeditor.com/ckeditor5/41.4.2/classic/ckeditor.js"></script>
<script>
let editor;
ClassicEditor.create(document.querySelector('#editorVisual'), {
  toolbar: [
    'heading','|','bold','italic','underline','link','bulletedList','numberedList','blockQuote',
    '|','insertTable','undo','redo','sourceEditing'
  ],
  htmlEmbed: { showPreviews: true },
  htmlSupport: {
    allow: [
      { name: /.*/, attributes: true, classes: true, styles: true }
    ]
  }
}).then(e => {
  editor = e;
  document.getElementById('saveVisual').addEventListener('click', async () => {
    const conteudo = editor.getData();
    const resp = await fetch('/paginas/save', {
      method: 'POST',
      headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
      body: new URLSearchParams({ file: '<%= file %>', content: conteudo })
    });
    alert(resp.ok ? '✅ Salvo!' : '❌ Erro ao salvar.');
  });
}).catch(console.error);
</script>
